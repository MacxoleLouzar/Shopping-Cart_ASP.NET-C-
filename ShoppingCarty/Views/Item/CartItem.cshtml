@model IEnumerable<ShoppingCarty.Models.ViewModel.ItemViewModel>

@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_AbajuTemplate.cshtml";


}

@Html.Partial("_topPartial")
<html>
@*<head>
        <meta name="viewport" content="width=device-width"/>

    </head>*@

<body>

    <div class="table">

        @foreach (var item in Model)
        {
            <div class="col-sm-4 col-md-3">
                <div class="thumbnail">
                    @if (item.Image != null)
                {
                    var base64 = Convert.ToBase64String(item.Image);
                    var ImgSource = string.Format("data:image/gif;base64,{0}", base64);
                        <img src="@ImgSource" width="80" height="70" />
                    }
                    <div class="">
                        <b>@Html.DisplayFor(modelItem => item.Name)</b>
                        <ul style="list-style: none">
                            <li>@Html.DisplayFor(modelItem => item.Description)</li>
                            <li>@Html.DisplayFor(modelItem => item.YearReleased)</li>
                            <li>@Html.DisplayFor(modelItem => item.ItemPrice)</li>
                    

                        </ul>
                        <p>
                            @if (item.Quantity > 0)
                            {
                                @Html.ActionLink("Add To Cart", "AddToCart", new { id = item.ItemId }, new { @class = "btn btn-primary" })
                            }
                            else
                            {
                                <div class="alert-danger">
                                    <h4>Out Of Stock</h4>
                                </div>
                            }
                        </p>

                    </div>

                </div>
            </div>



        }
    </div>





</body>



</html>
