@model IEnumerable<ShoppingCarty.Models.ViewModel.ItemViewModel>

@{
    ViewBag.Title = "Index";
}
<h2>All Items</h2>
<p>
    @Html.ActionLink("Add New", "AddItem", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            Image
        </th>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortPar, currentFilter = ViewBag.CurrentFilter })
        </th>


        <th>
            Description
        </th>
        <th>
            @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.DateSortPar, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            Price
        </th>
     
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @if (item.Image != null)
                {
                    var base64 = Convert.ToBase64String(item.Image);
                    var ImgSource = string.Format("data:image/gif;base64,{0}", base64);
                    <img src="@ImgSource" width="50" height="50" />

                }
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearReleased)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemPrice)
            </td>
            <td>
                @if (item.QRImage != null)
                {
                    var base64 = Convert.ToBase64String(item.QRImage);
                    var ImgSource = string.Format("data:image/gif;base64,{0}", base64);
                    <img src="@ImgSource" width="50" height="50" />

                }

            </td>
            <td>

                @Html.ActionLink("Delete", "Delete", new { id = item.ItemId }) ||
                @Html.ActionLink("Edit", "Edit", new { id = item.ItemId })
            </td>
        </tr>
    }

</table>
<br />
